{
  "name": "@nrfcloud/email-test-api",
  "version": "0.0.0-development",
  "description": "SMTP to GraphQL API for receiving emails in order to e2e test email sending built on top of AWS",
  "scripts": {
    "prettier": "prettier --write \"./**/*.ts\"",
    "prettier:lint": "prettier --list-different \"./**/*.ts\"",
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "tslint --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nRFCloud/email-test-api.git"
  },
  "keywords": [
    "aws",
    "serverless",
    "email",
    "e2e",
    "test"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nRFCloud/email-test-api/issues"
  },
  "homepage": "https://github.com/nRFCloud/email-test-api#readme",
  "devDependencies": {
    "@aws-cdk/aws-appsync": "^1.19.0",
    "@aws-cdk/aws-iam": "^1.19.0",
    "@aws-cdk/aws-lambda": "^1.19.0",
    "@aws-cdk/aws-s3": "^1.19.0",
    "@aws-cdk/aws-ses": "^1.19.0",
    "@aws-cdk/core": "^1.19.0",
    "@nrfcloud/package-layered-lambdas": "^1.2.0",
    "@nrfcloud/tslint-config": "^3.10.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/mailparser": "^2.7.0",
    "@types/node-fetch": "^2.5.4",
    "@types/uuid": "^3.4.6",
    "aws-cdk": "^1.19.0",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@aws-cdk/aws-ses-actions": "^1.19.0",
    "aws-sdk": "^2.592.0",
    "mailparser": "^2.7.7",
    "node-fetch": "^2.6.0",
    "uuid": "^3.3.3"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
